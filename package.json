{
    "name": "postcss-include-media",
    "version": "1.1.1",
    "description": "PostCSS plugin to output @media definitions from include-media format.",
    "main": "index.cjs.js",
    "module": "index.es.mjs",
    "files": [
        "index.cjs.js",
        "index.es.mjs",
        "index.d.ts"
    ],
    "types": "./index.d.ts",
    "keywords": [
        "postcss",
        "css",
        "postcss-plugin",
        "include-media",
        "@media",
        "media queries"
    ],
    "scripts": {
        "prepublishOnly": "npm test",
        "pretest": "rollup -c rollup.js",
        "lint": "eslint . --fix",
        "test": "vitest",
        "coverage": "vitest run --coverage && eslint ."
    },
    "author": "Jack McNicol <jack@mcpickle.com.au>",
    "license": "MIT",
    "repository": "jackmcpickle/postcss-include-media",
    "engines": {
        "node": ">=10.0.0"
    },
    "peerDependencies": {
        "postcss": "^8.2.8"
    },
    "devDependencies": {
        "@babel/core": "7.28.5",
        "@babel/plugin-syntax-dynamic-import": "7.8.3",
        "@babel/preset-env": "7.28.5",
        "@rollup/plugin-babel": "6.1.0",
        "@rollup/plugin-typescript": "11.1.6",
        "@types/node": "24.9.2",
        "@typescript-eslint/eslint-plugin": "6.21.0",
        "@typescript-eslint/parser": "6.21.0",
        "@vitest/coverage-c8": "0.33.0",
        "clean-publish": "4.4.0",
        "eslint": "8.57.1",
        "eslint-config-prettier": "8.10.2",
        "eslint-plugin-prettier": "4.2.5",
        "lint-staged": "13.3.0",
        "postcss": "8.5.6",
        "postcss-nesting": "12.1.5",
        "prettier": "2.8.8",
        "rollup": "2.79.2",
        "simple-git-hooks": "2.13.1",
        "typescript": "5.9.3",
        "vitest": "0.34.6"
    },
    "simple-git-hooks": {
        "pre-commit": "npx lint-staged"
    },
    "lint-staged": {
        "*.js": "eslint --fix"
    },
    "eslintConfig": {
        "root": true,
        "parserOptions": {
            "ecmaVersion": 2020,
            "sourceType": "module"
        },
        "parser": "@typescript-eslint/parser",
        "env": {
            "node": true,
            "commonjs": true,
            "es6": true
        },
        "plugins": [
            "@typescript-eslint",
            "prettier"
        ],
        "extends": [
            "eslint:recommended",
            "plugin:prettier/recommended",
            "plugin:@typescript-eslint/recommended"
        ],
        "rules": {
            "prettier/prettier": [
                "error"
            ],
            "@typescript-eslint/no-var-requires": "off"
        }
    }
}
