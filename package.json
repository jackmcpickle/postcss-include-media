{
  "name": "postcss-include-media",
  "version": "1.0.0",
  "description": "PostCSS plugin to output @media definitions from include-media format.",
  "main": "index.cjs.js",
  "module": "index.es.mjs",
  "files": [
    "index.cjs.js",
    "index.es.mjs",
    "index.d.ts"
  ],
  "types": "./index.d.ts",
  "keywords": [
    "postcss",
    "css",
    "postcss-plugin",
    "include-media",
    "@media",
    "media queries"
  ],
  "scripts": {
    "prepublishOnly": "npm test",
    "pretest": "rollup -c rollup.js",
    "lint": "eslint . --fix",
    "test": "jest --coverage && npm run lint"
  },
  "author": "Jack McNicol <jack@mcpickle.com.au>",
  "license": "MIT",
  "repository": "jackmcpickle/postcss-include-media",
  "engines": {
    "node": ">=10.0.0"
  },
  "peerDependencies": {
    "postcss": "^8.2.8"
  },
  "devDependencies": {
    "@babel/core": "7.15.8",
    "@babel/plugin-syntax-dynamic-import": "7.8.3",
    "@babel/preset-env": "7.15.8",
    "@rollup/plugin-babel": "5.3.0",
    "@rollup/plugin-typescript": "8.2.5",
    "@typescript-eslint/eslint-plugin": "4.33.0",
    "@typescript-eslint/parser": "4.33.0",
    "clean-publish": "2.2.0",
    "eslint": "7.32.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-jest": "24.7.0",
    "eslint-plugin-prettier": "4.0.0",
    "jest": "26.6.3",
    "lint-staged": "11.2.3",
    "postcss": "8.3.9",
    "prettier": "2.4.1",
    "rollup": "2.58.0",
    "simple-git-hooks": "2.6.1",
    "typescript": "4.4.3"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*.js": "eslint --fix"
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 2020,
      "sourceType": "module"
    },
    "parser": "@typescript-eslint/parser",
    "env": {
      "node": true,
      "commonjs": true,
      "es6": true
    },
    "plugins": [
      "@typescript-eslint",
      "prettier"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:prettier/recommended",
      "plugin:jest/recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "rules": {
      "prettier/prettier": [
        "error"
      ],
      "jest/expect-expect": "off",
      "@typescript-eslint/no-var-requires": "off"
    }
  },
  "jest": {
    "testEnvironment": "node",
    "coverageThreshold": {
      "global": {
        "statements": 90
      }
    }
  }
}
